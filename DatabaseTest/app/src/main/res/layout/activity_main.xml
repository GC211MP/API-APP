<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mdb"
                android:text="DB생성"
                android:layout_margin="3dp"
            />
            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ddl"
            android:text="테이블 생성"
                android:layout_margin="3dp"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ddl2"
                android:text="Userdata삽입"
                android:layout_margin="3dp"
            />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dml"
                android:text="출력"
                android:layout_margin="3dp"
            />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dml2"
                android:text="조회"
                android:layout_margin="3dp"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rank"
                android:text="랭킹조회"
                android:layout_margin="3dp"
            />
            <Button
                android:id="@+id/modifyid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름변경"
                android:layout_margin="3dp"
                />
            <Button
                android:id="@+id/modifypw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경"
                android:layout_margin="3dp"
                />
            <Button
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기록 갱신"
                android:layout_margin="3dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/td"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />
    </LinearLayout>
        
    </ScrollView>
    
